{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "composite": true,
    "rootDir": "./src"
  },
  "include": [
    "src/components/virtualized-list/**/*",
    "src/hooks/**/*",
    "src/core/**/*",
    "src/adapters/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/demo/**/*",
    "tests/**/*"
  ]
}
